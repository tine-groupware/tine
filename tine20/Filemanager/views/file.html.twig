{% extends '/Tinebase/views/base.html.twig' %}

{% block custom_style %}
.path-breadcrumb {
    background-color: #e9ecef;
    padding: 12px 20px;
    border-radius: 8px;
    margin-bottom: 30px;
    font-family: monospace;
    word-break: break-all;
    border-left: 4px solid #007bff;
}

.file-details-card {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 0;
    margin-top: 20px;
    overflow: hidden;
    border: 1px solid #dee2e6;
}

.card-header {
    background-color: #007bff;
    color: white;
    padding: 15px 20px;
    font-weight: 600;
    border-bottom: 1px solid #0056b3;
}

.details-table {
    margin: 0;
    background-color: white;
}

.details-table td {
    padding: 15px 20px;
    border-bottom: 1px solid #dee2e6;
    vertical-align: middle;
}

.details-table tr:last-child td {
    border-bottom: none;
}

.details-table tr:nth-child(even) {
    background-color: #f8f9fa;
}

.label-cell {
    font-weight: 600;
    color: #495057;
    width: 20%;
    background-color: #e9ecef !important;
}

.value-cell {
    color: #212529;
    font-family: system-ui, -apple-system, sans-serif;
}

.file-name {
    font-weight: 600;
    color: #007bff;
    word-break: break-all;
}

.file-size {
    font-family: monospace;
    color: #6c757d;
    font-weight: 500;
}

.file-date {
    font-family: monospace;
    color: #6c757d;
}

.timezone-info {
    font-size: 0.875rem;
    color: #6c757d;
    font-style: italic;
}

{% endblock %}


{% block title %}
    <title>{{ _('File') }}</title>
{% endblock %}

{% block content %}
    <!-- Current Path -->
    <div class="path-breadcrumb">
        <i class="fas fa-folder me-2"></i>
        <strong>{{ file.path }}</strong>
    </div>

    <!-- File Details Card -->
    <div class="file-details-card">
        <table class="table details-table mb-0">
            <tbody>
            <tr>
                <td class="label-cell">
                    {{ _('Name') }}
                </td>
                <td class="value-cell">
                    <span class="file-name">{{ file.name|e }}</span>
                </td>
            </tr>

            <tr>
                <td class="label-cell">
                    {{ _('Size') }}
                </td>
                <td class="value-cell">
                    <span class="file-size">{{ file.size }}</span>
                </td>
            </tr>

            <tr>
                <td class="label-cell">
                    {{ _('Last Modified') }}
                </td>
                <td class="value-cell">
                    <div class="file-date">{{ dateFormat(file.last_modified_time, Date.patterns.ISO8601Long) }}</div>
                    <div class="timezone-info">{{ timezone }}</div>
                </td>
            </tr>

            <tr>
                <td class="label-cell">
                    {{ _('Action') }}
                </td>
                <td class="value-cell">
                    <a class="btn btn-primary p-2" href="{{ file.path }}" role="button">{{ _('Download') }}</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
