{% extends 'Tinebase/views/base.html.twig' %}

{% block custom_style %}
.password-form {
    text-align: left;
}

.password-input {
    margin: 10px 0;
    padding: 8px 12px;
    border: 1px solid #ced4da;
    border-radius: 4px;
    font-size: 14px;
    width: 250px;
}

.submit-btn {
    margin: 10px 0;
    padding: 8px 16px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
}

.submit-btn:hover {
    background-color: #0056b3;
}

.form-group {
    margin-bottom: 15px;
}
{% endblock %}

{% block title %}
    <title>{{ _('Password required for download') }}</title>
{% endblock %}

{% block content %}
    <div class="password-form">
        <h3 class="mb-4 text-primary">{{ _('Password required for download') }}</h3>
        <form method="post" action="">
            <div class="form-group">
                <input type="password" name="dlpassword" class="password-input" placeholder="Enter password" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="{{ _('Submit') }}" class="submit-btn btn btn-primary">
            </div>
        </form>
    </div>
{% endblock %}