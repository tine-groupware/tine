<?xml version="1.0" encoding="UTF-8"?>
<config>
    <model>Sales_Model_Document_PurchaseInvoice</model>
    <name>document_purchaseinvoice_default_ods</name>
    <type>export</type>
    <plugin>Sales_Export_Ods_DocumentPurchaseInvoice</plugin>
    <description>default ods purchase invoice export definition</description>
    <header>1</header>
    <headers>
        <header>{date}</header>
        <header>{user}</header>
    </headers>
    <defaultColumnStyle>
        <column-width>3cm</column-width>
    </defaultColumnStyle>
    <columns>
        <column>
            <identifier>supplier_id</identifier>
            <header>Supplier</header>
            <style>
                <column-width>5cm</column-width>
            </style>
        </column>
        <column>
            <identifier>number</identifier>
            <header>Invoice Number</header>
            <style>
                <column-width>4cm</column-width>
            </style>
        </column>
        <column>
            <identifier>date</identifier>
            <header>Date</header>
            <type>date</type>
            <columnStyle>dateDMYCell</columnStyle>
        </column>
        <column>
            <identifier>net_sum</identifier>
            <header>Price Net</header>
            <type>currency</type>
            <columnStyle>currencyEURCell</columnStyle>
            <style>
                <column-width>4cm</column-width>
            </style>
        </column>
        <column>
            <identifier>sales_tax</identifier>
            <header>Price Tax</header>
            <type>currency</type>
            <columnStyle>currencyEURCell</columnStyle>
            <style>
                <column-width>4cm</column-width>
            </style>
        </column>
        <column>
            <identifier>gross_sum</identifier>
            <header>Price Gross</header>
            <type>currency</type>
            <columnStyle>currencyEURCell</columnStyle>
            <style>
                <column-width>4cm</column-width>
            </style>
        </column>
        <column>
            <identifier>credit_term</identifier>
            <header>Due in</header>
            <type>float</type>
        </column>
        <column>
            <identifier>due_at</identifier>
            <header>Due at</header>
            <type>date</type>
            <columnStyle>dateDMYCell</columnStyle>
        </column>
        <column>
            <identifier>pay_at</identifier>
            <header>Pay at</header>
            <type>date</type>
            <columnStyle>dateDMYCell</columnStyle>
        </column>
        <column>
            <identifier>payment_means_used</identifier>
            <header>Payment Method</header>
            <style>
                <column-width>4cm</column-width>
            </style>
        </column>
        <column>
            <identifier>over_due_at</identifier>
            <header>Overdue at</header>
            <type>date</type>
            <columnStyle>dateDMYCell</columnStyle>
        </column>
        <column>
            <identifier>invoice_discount_percentage</identifier>
            <header>Discount</header>
            <type>percentage</type>
        </column>
        <column>
            <identifier>approver</identifier>
            <header>Approver</header>
        </column>
        <column>
            <identifier>paid_at</identifier>
            <header>Paid at</header>
            <type>date</type>
            <columnStyle>dateDMYCell</columnStyle>
        </column>
        <column>
            <identifier>description</identifier>
            <header>Description</header>
            <style>
                <column-width>6cm</column-width>
            </style>
        </column>
    </columns>
</config>
