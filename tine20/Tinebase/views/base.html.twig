{#remove bootstrap.min.css after refactor all templates to singleapp template#}
{% apply inline_css(source("Tinebase/css/build/bootstrap/bootstrap.min.css")) %}
<!DOCTYPE html>
<html{% if lang %} lang="{{ lang }}"{% endif %}>
<head>
    {% block title %}
        <title>{{ _('BASE') }}</title>
    {% endblock %}
    {% if base is defined -%}
        <base href='{{ base }}'>
    {% endif %}

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-Tine20-Version" content="{{ constant('TINE20_PACKAGESTRING') }}" />
    <meta name="google" content="notranslate">

    <style>
        :root {
            --header-height: 100px;
            --footer-height: 150px;
            --spacing: 20px;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .content-wrapper {
            flex: 1;
            padding: 20px;
            text-align: left;
            box-sizing: border-box;
            overflow: hidden;
            margin-top: calc(var(--header-height) + var(--spacing));
            margin-bottom: calc(var(--footer-height) + var(--spacing));
            display: flex;
            flex-direction: column;
        }

        .content {
            padding: 30px;
            border-radius: 8px;
            border: 1px solid #e9ecef;
            background-color: white;
            overflow-y: auto;
            flex: 1;
            min-height: 0;
            position: relative; /* ADD THIS - makes it the positioning context */
        }

        .error {
            min-height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .header-section {
            max-height: var(--header-height);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: inherit;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .footer-section {
            height: var(--footer-height);
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 20px;
            background-color: #f6f6f6;
            border-top: 1px solid #EDEDED;
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow: hidden;
            box-sizing: border-box;
            z-index: 1020;
        }

        .redirect-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.95);
            display: none !important; /* Add !important */
            align-items: center;
            justify-content: center;
            flex-direction: column;
            z-index: 100;
        }

        .redirect-overlay.active {
            display: flex !important; /* Add !important */
        }

        .redirect-spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        {% block custom_style %}
        {% endblock %}
    </style>
</head>
<body>
    {% block jsIncludes -%}
        {%- include 'Tinebase/views/partials/jsInclude.html.twig' -%}
    {%- endblock jsIncludes %}
    <script>
        // Global redirect helper function
        function showRedirectAndGo(url, message, delay) {
            document.addEventListener('DOMContentLoaded', function() {
                message = message || '{{ _('Redirecting...') }}';
                delay = delay || 500;

                const overlay = document.getElementById('redirectOverlay');
                const messageEl = document.getElementById('redirectMessage');

                if (overlay) {
                    overlay.classList.add('active');
                    overlay.style.display = 'flex'; // Use inline style instead of class
                }

                if (messageEl) {
                    messageEl.textContent = message;
                }

                setTimeout(function() {
                    window.location.href = url;
                }, delay);
            });
        }
    </script>
    <!-- Header Section - Fixed Top Left -->
    <div class="header-section">
        {% include 'Tinebase/views/header.html.twig' %}
    </div>
    <!-- Main Content - Left Aligned -->
    <div class="content-wrapper">
        <div class="content ">
            {% if not app.enablePublicPages and requiredPublicPagesConfig %}
                <div class="error">
                    <h4 class="text-center">{{ _('Feature is not available. Please ask admin to enable public page config') }}</h4>
                </div>
            {% else %}
                {% block content %}
                    Content Not Found
                {% endblock %}
            {% endif %}
            <!-- Redirect Overlay - Inside content, AFTER the block -->
            <div id="redirectOverlay" class="redirect-overlay">
                <div class="redirect-spinner"></div>
                <p id="redirectMessage">{{ _('Redirecting...') }}</p>
            </div>
        </div>
    </div>
    <!-- Footer Section - Fixed Bottom -->
    <div class="footer-section">
        {% include 'Tinebase/views/footer.html.twig' %}
    </div>
</body>
</html>
{% endapply %}