{#remove bootstrap.min.css after refactor all templates to singleapp template#}
{% apply inline_css(source("Tinebase/css/build/bootstrap/bootstrap.min.css")) %}
<!DOCTYPE html>
<html{% if lang %} lang="{{ lang }}"{% endif %}>
<head>
    {% block title %}
        <title>{{ _('BASE') }}</title>
    {% endblock %}
    {% if base is defined -%}
        <base href='{{ base }}'>
    {% endif %}

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-Tine20-Version" content="{{ constant('TINE20_PACKAGESTRING') }}" />
    <meta name="google" content="notranslate">

    <style>
        :root {
            --header-height: 80px;
            --footer-height: 150px;
            --spacing: 20px;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .content-wrapper {
            flex: 1;
            padding: 20px;
            text-align: left;
            box-sizing: border-box;
            overflow: hidden;
            margin-top: calc(var(--header-height) + var(--spacing));
            margin-bottom: calc(var(--footer-height) + var(--spacing));
            display: flex;
            flex-direction: column;
        }

        .content {
            padding: 30px;
            border-radius: 8px;
            border: 1px solid #e9ecef;
            background-color: white;
            overflow-y: auto;
            flex: 1;
            min-height: 0;
        }

        .header-section {
            height: var(--header-height);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: inherit;
            padding: 10px 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .footer-section {
            height: var(--footer-height);
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 20px;
            background-color: #f6f6f6;
            border-top: 1px solid #EDEDED;
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow: hidden;
            box-sizing: border-box;
            z-index: 1020;
        }

        {% block custom_style %}
        {% endblock %}
    </style>
</head>
<body>
    {% block jsIncludes -%}
        {%- include 'Tinebase/views/partials/jsInclude.html.twig' -%}
    {%- endblock jsIncludes %}
    <!-- Header Section - Fixed Top Left -->
    <div class="header-section">
        {% include 'Tinebase/views/header.html.twig' %}
    </div>
    <!-- Main Content - Left Aligned -->
    <div class="content-wrapper">
        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </div>
    <!-- Footer Section - Fixed Bottom -->
    <div class="footer-section">
        {% include 'Tinebase/views/footer.html.twig' %}
    </div>
</body>
</html>
{% endapply %}