<footer class="d-flex flex-column justify-content-between h-100">
    <!-- Top section - Organization info -->
    <div class="flex-grow-1 d-flex flex-column justify-content-center">
        {% if app.installationRepresentative.org_name is not empty %}
            <p class="text-muted mb-2 text-truncate">
                {{ app.installationRepresentative.org_name }}
            </p>
        {% endif %}

        {% set address_parts = [
            app.installationRepresentative.adr_one_street,
            app.installationRepresentative.adr_one_postalcode,
            app.installationRepresentative.adr_one_locality
        ]|filter(v => v is not empty) %}

        {% if address_parts is not empty %}
            <div class="text-muted mb-1 text-truncate">
                {{ address_parts|join(', ') }}
            </div>
        {% endif %}

        <div class="text-muted mb-2 text-sm-start text-truncate">
            Copyright Â© 2025 Metaways Infosystems GmbH. All rights reserved.
        </div>

        <!-- Links with Bootstrap utilities -->
        <div class="d-flex flex-wrap justify-content-sm-start align-items-center gap-1">
            <a href="/terms" class="text-primary">Terms of Service</a>
            <span class="text-muted mx-1 d-sm-inline">|</span>

            <a href="/privacy-policy" class="text-primary">Privacy Policy</a>
            <span class="text-muted mx-1 d-sm-inline">|</span>

            <a href="mailto:{{ app.installationRepresentative.email | default('') }}" class="text-primary">Contact Us</a>
            <span class="text-muted mx-1 d-sm-inline">|</span>

            <a href="/imprint" class="text-primary">Imprint</a>
        </div>
    </div>
</footer>
