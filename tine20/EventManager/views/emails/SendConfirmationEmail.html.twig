{% extends 'Tinebase/views/emails/base.html.twig' %}

{% block subject %}
    {{ _('Confirmation E-mail') }}
{% endblock %}

{% block body %}
    {% if event != '' %}
        <div class="mt-3 mb-5">
            <p class="text-start">
                {{ _('You are registered for %1$s.') | format(event.name) }}<br>
                {{ _('To find other events or manage your registration, please follow the link below') }}
            </p>
        </div>
    {% endif %}
    <div class="ax-center my-5">
        <a class="btn btn-primary p-2" href="{{ link }}" role="button">{{ _('Events') }}</a>
    </div>
{% endblock %}